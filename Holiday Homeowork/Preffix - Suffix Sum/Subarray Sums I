package PreffixSuffixSum;

import java.util.*;
import java.io.*;

public class SubarraySumsI {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        StringTokenizer st;

        st = new StringTokenizer(br.readLine());
        int n = Integer.parseInt(st.nextToken());
        long target = Long.parseLong(st.nextToken());

        st = new StringTokenizer(br.readLine());
        long[] arr = new long[n];
        for (int i = 0; i < n; i++) {
            arr[i] = Long.parseLong(st.nextToken());
        }

        Map<Long, Long> prefixCount = new HashMap<>();
        prefixCount.put(0L, 1L);  // sum of empty prefix
        long sum = 0, count = 0;

        for (int i = 0; i < n; i++) {
            sum += arr[i];
            count += prefixCount.getOrDefault(sum - target, 0L);
            prefixCount.put(sum, prefixCount.getOrDefault(sum, 0L) + 1);
        }

        System.out.println(count);
    }
}
