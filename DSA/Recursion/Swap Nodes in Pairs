class Solution { 
    // TC => O(n), SC => O(n)
    public ListNode swapPairs(ListNode head) {
        if(head == null || head.next == null) return head;

        ListNode firstNode = head;
        ListNode secondNode = head.next;
        ListNode temp = swapPairs(secondNode.next);
        secondNode.next = firstNode;
        firstNode.next = temp;

        return secondNode;
    }
}
