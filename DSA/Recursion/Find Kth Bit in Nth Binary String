class Solution {
    public char findKthBit(int n, int k) {
        if(n==1) return '0';

        int len = (int)Math.pow(2,n-1);
        int mid = len+1/2;
        if(k == mid) return '1';  // mid will always has '1';
        if(k <= mid){
            return findKthBit(n-1,k);
        }else{
            char ch = findKthBit(n-1,mid-(k-mid));
            return ch == '0' ? '1' : '0';
        }
    }
}
