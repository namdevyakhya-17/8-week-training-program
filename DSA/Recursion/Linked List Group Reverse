class Solution {
    public Node reverseKGroup(Node head, int k) {
        if(head == null || head.next == null) return head;
        
        Node cur = head;
        Node prev = null;
        for(int i=0; i<k && cur != null; i++){
            Node temp = cur.next;
            cur.next = prev;
            prev = cur;
            cur = temp;
        }
        
        head.next = reverseKGroup(cur, k);
        return prev;
    }
}
