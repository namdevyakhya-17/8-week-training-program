import java.util.Scanner;
class WeirdAlgorithm{     
    public static void weird(long n){
        System.out.print(n + " ");
        if(n == 1){
            return;
        }
 
        if(n%2 == 0){
            weird(n/2);
        }else{
            weird(3*n + 1);
        }
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        long n = sc.nextLong();
        weird(n);
        sc.close();
    }


// TC - O(log base 10 n) in case of even numbers, O(n) in case of odd numbers
