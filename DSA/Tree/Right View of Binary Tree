class Solution {
    public void traverse(List<Integer> ans, TreeNode root, int level){
        if(root == null) return;
        if(ans.size() == level){
            ans.add(root.val);
        }
        traverse(ans,root.right,level+1);
        traverse(ans,root.left,level+1);
    }
    public List<Integer> rightSideView(TreeNode root) {
        List<Integer> ans = new ArrayList<>();
        traverse(ans, root,0);
        return ans;
    }
}
