class Solution {
    public List<Integer> inorderTraversal(TreeNode root) {
        TreeNode cur = root;
        List<Integer> ans = new ArrayList<>();

        while(cur != null){
            if(cur.left == null){
                ans.add(cur.val);
                cur = cur.right;
            }else{
                // find inorder predecessor
                TreeNode prev = cur.left;
                while(prev.right != null && prev.right != cur){
                    prev = prev.right;
                }
                if(prev.right == cur){
                    //remove link
                    ans.add(cur.val);
                    prev.right = null;
                    cur = cur.right;
                }else if(prev.right == null){
                    prev.right = cur;
                    cur = cur.left;
                }
            }
        }
        return ans;
    }
}
