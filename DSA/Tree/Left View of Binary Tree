class Solution {
    public void traverse(Node root, ArrayList<Integer> ans, int level){
        if(root == null) return;
        
        if(ans.size() == level){
            ans.add(root.data);
        }
        traverse(root.left, ans, level+1);
        traverse(root.right, ans, level+1);
    }
    public ArrayList<Integer> leftView(Node root) {
        ArrayList<Integer> ans = new ArrayList<>();
        ans.add(root.data);
        traverse(root,ans,0);
        return ans;
    }
}
