class Solution {
    class Pair{
        TreeNode node;
        int idx;                // keep this idx as long if not given of 32-bit integer
        public Pair(TreeNode node, int idx){
            this.node = node;
            this.idx = idx;   
        }
    }
    public int widthOfBinaryTree(TreeNode root) {
        Deque<Pair> dq = new ArrayDeque<>();
        dq.add(new Pair(root,0));
        int maxWidth = 0;

        while(!dq.isEmpty()){
            // finding size of queue
            int first = dq.peekFirst().idx;
            int last = dq.peekLast().idx;
            maxWidth = Math.max(maxWidth, last-first+1);
            int size = dq.size();

            for(int i=0; i<size; i++){
                Pair cur = dq.poll();
                TreeNode node = cur.node;
                int idx = cur.idx;
                if(node.left != null){
                    dq.offer(new Pair(node.left, 2*idx+1));
                }
                if(node.right != null){
                    dq.offer(new Pair(node.right, 2*idx+2));
                }
            }
        }
        return maxWidth;
    }
}
