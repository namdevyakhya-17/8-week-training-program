class Solution {
    public List<Integer> flatten(TreeNode root) {
        List<Integer> ans = new ArrayList<>();
        TreeNode cur = root;

        while(cur != null){
            if(cur.left == null){
                ans.add(cur.val);
                cur = cur.right;
            }else{
                TreeNode prev = cur.left;
                while(prev.right != null){
                    prev = prev.right;
                }

                prev.right = cur.right;
                cur.right = cur.left;
                cur.left = null;
            }
        }
        return ans;
    }
}
