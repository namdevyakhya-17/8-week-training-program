class Solution {
    int maxdia = 0;
    public int findH(TreeNode root){
        if(root == null) return 0;
        int lc = findH(root.left);
        int rc = findH(root.right);
        maxdia = Math.max(maxdia, lc+rc);
        return Math.max(lc,rc)+1;
    }
    public int diameterOfBinaryTree(TreeNode root) {
        findH(root);
        return maxdia;
    }
} 
