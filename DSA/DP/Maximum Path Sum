class Solution {
    int max = Integer.MIN_VALUE;
    int solve(Node root){
        if(root == null) return 0;
        
        int leftD = Math.max(0, solve(root.left));
        int rightD = Math.max(0, solve(root.right));
        
        max = Math.max(max, leftD+rightD+root.data);
        return root.data + Math.max(leftD, rightD);
    }
    int findMaxSum(Node root) {
        solve(root);
        return max;
    }
}
