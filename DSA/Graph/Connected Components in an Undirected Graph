// BFS
class Solution {
    public ArrayList<Integer> bfs(ArrayList<ArrayList<Integer>> adjList, int src, boolean[] visited){
        Queue<Integer> q = new LinkedList<>();
        q.offer(src);
        visited[src] = true;
        ArrayList<Integer> temp = new ArrayList<>();
        
        while(!q.isEmpty()){
            int cur = q.poll();
            temp.add(cur);
            for(int node: adjList.get(cur)){
                if(!visited[node]){
                    visited[node] = true;
                    q.offer(node);
                }
            }
        }
        return temp;
    }
    public ArrayList<ArrayList<Integer>> getComponents(int V, int[][] edges) {
        ArrayList<ArrayList<Integer>> adjList = new ArrayList<>();
        for(int i=0; i<V; i++){
            adjList.add(new ArrayList<>());
        }
        
        for(int[] edge: edges){
            int u = edge[0];
            int v = edge[1];
            adjList.get(u).add(v);
            adjList.get(v).add(u);
        }
        
        boolean[] visited = new boolean[V];
        ArrayList<ArrayList<Integer>> ans = new ArrayList<>();
        for(int i=0; i<V; i++){
            if(!visited[i]){
                ArrayList<Integer> temp = bfs(adjList, i, visited);
                ans.add(temp);
            }
        }
        
        return ans;
    }
}

// DFS
class Solution {
    public void dfs(ArrayList<ArrayList<Integer>> adjList, int src, boolean[] visited, ArrayList<Integer> temp){
        visited[src] = true;
        temp.add(src);
        
        for(int adjNode: adjList.get(src)){
            if(!visited[adjNode]){
                dfs(adjList, adjNode, visited, temp);
            }
        }
    }
    public ArrayList<ArrayList<Integer>> getComponents(int V, int[][] edges) {
        ArrayList<ArrayList<Integer>> adjList = new ArrayList<>();
        for(int i=0; i<V; i++){
            adjList.add(new ArrayList<>());
        }
        
        for(int[] edge: edges){
            int u = edge[0];
            int v = edge[1];
            adjList.get(u).add(v);
            adjList.get(v).add(u);
        }
        
        boolean[] visited = new boolean[V];
        ArrayList<ArrayList<Integer>> ans = new ArrayList<>();
        for(int i=0; i<V; i++){
            if(!visited[i]){
                ArrayList<Integer> temp = new ArrayList<>();
                dfs(adjList, i, visited, temp);
                ans.add(temp);
            }
        }
        
        return ans;
    }
}
